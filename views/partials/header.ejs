

<header class="app-header">
  <!-- Left: Logo -->
  <div class="logo-section">
    <img src="/images/logo.png" alt="FamilyFund Logo">
    <h1>FamilyFund</h1>
  </div>

  <!-- Right: Profile -->
  <div class="profile-section">
    <span>Welcome, <%= user ? user.name : 'Guest' %></span>
    <img src="<%= user && user.profilePicture ? user.profilePicture : '/images/default-avatar.png' %>" 
         alt="Profile Picture">
    
    <!-- Conditional Login/Logout Button -->
    <% if (user) { %>
      <a href="/auth/logout" class="logout-btn">Logout</a>
    <% } else { %>
      <a href="/auth" class="login-btn">Login</a>
    <% } %>
  </div>
</header>


