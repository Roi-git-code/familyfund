

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>My Applications - OMA</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/flash.css">

  <style>
    :root {
      --primary-purple: #8B5FBF;
      --light-purple: #9D7FCC;
      --gradient-purple: linear-gradient(135deg, #8B5FBF 0%, #6A4C93 100%);
      --light-gradient: linear-gradient(135deg, #f8f4ff 0%, #e8e2ff 100%);
    }
    
    .bg-purple-gradient {
      background: var(--gradient-purple);
    }
    
    .bg-light-purple {
      background: var(--light-gradient);
    }
    
    .applications-table tr:hover {
      background-color: #f8f9fa;
    }
    
    .status-badge {
      font-size: 0.85rem;
    }
    
    /* Mobile optimizations */
    @media (max-width: 768px) {
      .table-responsive {
        font-size: 0.875rem;
      }
      
      .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.775rem;
      }
      
      .card-body {
        padding: 1rem;
      }
    }
    
    @media (max-width: 576px) {
      .p-4 {
        padding: 1rem !important;
      }
      
      .card-header h2 {
        font-size: 1.25rem;
      }
      
      .btn-group {
        flex-direction: column;
      }
      
      .btn-group .btn {
        margin-bottom: 0.25rem;
        border-radius: 0.375rem !important;
      }
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light-purple">

  <%- include('partials/oma-header', { omaUser: omaUser }) %>

  <div class="d-flex flex-column flex-md-row flex-grow-1">
    <%- include('partials/oma-sidebar', { active: 'applications', omaUser: omaUser, user: user }) %>

    <div class="flex-grow-1 p-3 p-md-4">
  <%- include('partials/flash') %>

      <div class="card shadow rounded-3 border-0">
        <div class="card-header bg-purple-gradient text-white d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
          <h2 class="mb-2 mb-md-0">ðŸ“‚ My Applications</h2>
          <a href="/oma/apply" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>New Application
          </a>
        </div>
        
        <div class="card-body bg-white">
          <% if (apps && apps.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover applications-table align-middle">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th class="d-none d-md-table-cell">Date of Birth</th>
                    <th class="d-none d-lg-table-cell">Phone</th>
                    <th>Status</th>
                    <th class="d-none d-sm-table-cell">Submitted</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% apps.forEach(ap => { %>
                    <tr>
                      <td><strong>#<%= ap.id %></strong></td>
                      <td>
                        <div class="d-flex flex-column">
                          <span class="fw-bold"><%= ap.first_name %> <%= ap.sur_name %></span>
                          <% if (ap.middle_name) { %>
                            <small class="text-muted"><%= ap.middle_name %></small>
                          <% } %>
                        </div>
                      </td>
                      <td class="d-none d-md-table-cell"><%= new Date(ap.date_of_birth).toLocaleDateString() %></td>
                      <td class="d-none d-lg-table-cell"><%= ap.phone %></td>
                      <td>
                        <span class="badge status-badge
                          <%= ap.status === 'Approved' ? 'bg-success' : 
                              ap.status === 'Rejected' ? 'bg-danger' : 
                              ap.status === 'Registered' ? 'bg-primary' : 
                              'bg-warning text-dark' %>">
                          <%= ap.status || 'Pending' %>
                        </span>
                      </td>
                      <td class="d-none d-sm-table-cell"><%= new Date(ap.created_at).toLocaleDateString() %></td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/oma/application/<%= ap.id %>/view" 
                             class="btn btn-outline-primary"
                             title="View Details">
                            <i class="fas fa-eye"></i>
                            <span class="d-none d-sm-inline"> View</span>
                          </a>
                          <a href="/oma/application/<%= ap.id %>/pdf" 
                             class="btn btn-outline-success"
                             title="Download PDF">
                            <i class="fas fa-download"></i>
                            <span class="d-none d-sm-inline"> PDF</span>
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <div class="mt-3 text-muted">
              <small>Showing <%= apps.length %> application(s)</small>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
              <h4>No Applications Found</h4>
              <p class="text-muted mb-4">You haven't submitted any applications yet.</p>
              <a href="/oma/apply" class="btn btn-success btn-lg">
                <i class="fas fa-plus me-2"></i>Submit Your First Application
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/oma-footer') %>

  <!-- Font Awesome for icons -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/flash.js"></script>

</body>
</html>


