<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Chairman Panel</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Unified custom CSS -->
  <link href="/css/app.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

       <!-- Header -->
        <%- include('partials/header') %>

  <!-- Sidebar -->
  <%- include('partials/sidebar', { user: user }) %>

  <div class="container-fluid">
    <div class="row">

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">

        <% if (user) { %>
          <div class="alert alert-info">
            You are logged in as <strong><%= user.username %></strong> (<%= user.role %>) |
            <a href="/">Home</a> |
            <a href="/auth/logout">Logout</a>
          </div>
        <% } %>

        <div class="card mb-4 shadow-sm">
          <div class="card-body">

            <h2 class="text-center mb-4">Registered Members</h2>

            <!-- Backend feedback -->
            <% if (flash.error?.length) { %>
              <div class="alert alert-danger"><%= flash.error[0] %></div>
            <% } %>
            <% if (flash.success?.length) { %>
              <div class="alert alert-success"><%= flash.success[0] %></div>
            <% } %>

            <!-- Table -->
            <div class="table-responsive">
              <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th><th>First</th><th>Middle</th><th>Surname</th><th>DOB</th>
                    <th>Email</th><th>Phone</th><th>Address</th><th>Marital</th>
                    <th>Children</th><th>Father Alive</th><th>Mother Alive</th>
                    <% if (user && user.role === 'chairman') { %>
                      <th colspan="2">Actions</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% members.forEach(m => { %>
                    <tr>
                      <td><%= m.id %></td>
                      <td><%= m.first_name %></td>
                      <td><%= m.middle_name || '' %></td>
                      <td><%= m.sur_name %></td>
                      <td><%= m.date_of_birth %></td>
                      <td><%= m.email || '' %></td>
                      <td><%= m.phone || '' %></td>
                      <td><%= m.address %></td>
                      <td><%= m.marital_status %></td>
                      <td><%= m.number_of_children %></td>
                      <td><%= m.father_alive ? 'Yes' : 'No' %></td>
                      <td><%= m.mother_alive ? 'Yes' : 'No' %></td>
                      
                      <% if (user && user.role === 'chairman') { %>
                        <td>
                          <a href="/member/edit/<%= m.id %>" class="btn btn-warning btn-sm w-100 mb-1">Edit</a>
                        </td>
                        <td>
                          <button type="button" class="btn btn-danger btn-sm w-100" 
                                  data-bs-toggle="modal" 
                                  data-bs-target="#deleteMemberModal" 
                                  data-member-id="<%= m.id %>" 
                                  data-member-name="<%= m.first_name %> <%= m.middle_name %> <%= m.sur_name %>">
                            Delete
                          </button>
                        </td>
                      <% } %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <div class="text-center mt-3">
              <a href="/member" class="btn btn-success">‚Üê Back to Registration</a>
            </div>

          </div>
        </div>

        <!-- Modals -->
        <%- include('partials/change_password_modal') %>
        <%- include('partials/modals/deleteMemberModal') %>

      </main>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/dashboard.js"></script>
  <script src="/script/sidebar.js"></script>
  <script src="/script/update_profie.js"></script>

</body>
</html>
