

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Member Contribution</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Optional custom CSS for minor tweaks -->
  <link rel="stylesheet" href="/css/app.css">
  <link rel="stylesheet" href="/css/flash.css">

</head>
<body>

  <%- include('partials/header') %>

<%- include('partials/sidebar', { user: user }) %>
<div class="container my-4">
<%- include('partials/flash') %>

    <h2>Add Contribution</h2>

    <form id="contributionForm" method="POST" action="/contributions/add" class="mt-3">
      <div class="mb-3">
        <label for="member_id" class="form-label">Member ID:</label>
        <input type="number" name="member_id" id="member_id" class="form-control" required>
        <div id="memberIdError" class="text-danger small" style="display:none;">Please enter a valid Member ID.</div>
      </div>

      <div class="mb-3">
        <label for="year" class="form-label">Year:</label>
        <select name="year" id="year" class="form-select" required>
          <% for(let y = new Date().getFullYear(); y >= 2000; y--) { %>
            <option value="<%= y %>"><%= y %></option>
          <% } %>
        </select>
      </div>

      <div class="mb-3">
        <label for="month" class="form-label">Month:</label>
        <select name="month" id="month" class="form-select" required>
          <% ['January','February','March','April','May','June','July','August','September','October','November','December'].forEach((m,i) => { %>
            <option value="<%= m.toLowerCase().slice(0,3) %>"><%= m %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="amount" class="form-label">Amount (Tsh):</label>
        <input type="number" name="amount" id="amount" class="form-control" min="1000" max="1000000" required>
        <div id="amountError" class="text-danger small" style="display:none;">Amount must be between Tsh 10,000 and 100,000.</div>
      </div>

      <button type="submit" class="btn btn-primary">Submit Contribution</button>
    </form>
  </div>


<%- include('partials/change_password_modal') %>

<%- include('partials/footer') %>

<!-- Bootstrap JS and sctripts-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/script/dashboard.js"></script>
<script src="/script/sidebar.js"></script>
<script src="/script/layoutScript.js"></script>
 <script src="/js/flash.js"></script>

