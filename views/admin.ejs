<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Dashboard - FamilyFund</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Unified custom CSS -->
  <link href="/css/app.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Header -->
  <%- include('partials/header') %>

  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
        <%- include('partials/sidebar') %>
      </nav>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <h2 class="mb-4">Welcome Admin, <%= user.email %>!</h2>

<!-- Backend feedback -->
      <% if (flash.error?.length) { %>
        <p class="error"><%= flash.error[0] %></p>
      <% } %>
      <% if (flash.success?.length) { %>
        <p class="success"><%= flash.success[0] %></p>
      <% } %>

        <div class="row g-3 mb-4">

          <!-- Member Management -->
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title">Member Management</h5>
                <p class="card-text">You can register or edit members just like the chairman.</p>
                <a href="/member/form" class="btn btn-primary btn-sm">Register Member</a>
                <a href="/member" class="btn btn-outline-primary btn-sm">Manage Members</a>
              </div>
            </div>
          </div>

          <!-- Assign Role -->
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title">Assign / Change User Role</h5>
                <form action="/admin/assign-role" method="POST">
                  <div class="mb-2">
                    <label class="form-label">Select User</label>
                    <select class="form-select" name="user_id">
                      <% users.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.username %> (Current: <%= u.role %>)</option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="mb-2">
                    <label class="form-label">Select Role</label>
                    <select class="form-select" name="role">
           <option value="member">Member</option>
           <option value="chief_signatory">Chief Signatory</option>
           <option value="assistant_signatory">Assistant Signatory</option>
          <option value="chairman">Chairman</option>
          <option value="admin">Admin</option>
       
 </select>
                  </div>
                  <button type="submit" class="btn btn-success btn-sm">Assign Role</button>
                </form>
              </div>
            </div>
          </div>

               <!-- User Management (Delete) -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Manage Users</h5>
          <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
              <thead class="table-dark">
                <tr>
                  <th>ID</th>
                  <th>Username</th>
                  <th>Role</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(u => { %>
                  <tr>
                    <td><%= u.id %></td>
                    <td><%= u.username %></td>
                    <td><span class="badge bg-info text-dark"><%= u.role %></span></td>
                    <td class="text-center">
                      <form method="POST" action="/admin/delete-user" 
                            onsubmit="return confirm('Are you sure you want to delete this user?');" 
                            class="d-inline">
                        <input type="hidden" name="user_id" value="<%= u.id %>">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

        </div>

      <%- include('partials/change_password_modal') %>
  
      </main>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("sidebarMenu");
    const toggleBtn = document.getElementById("sidebarToggle");

    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("show");
    });
  });
</script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
