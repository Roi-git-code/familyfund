

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Apply - Family Fund</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/flash.css">

  <style>
    :root {
      --primary-purple: #8B5FBF;
      --light-purple: #9D7FCC;
      --gradient-purple: linear-gradient(135deg, #8B5FBF 0%, #6A4C93 100%);
      --light-gradient: linear-gradient(135deg, #f8f4ff 0%, #e8e2ff 100%);
    }
    
    .bg-purple-gradient {
      background: var(--gradient-purple);
    }
    
    .bg-light-purple {
      background: var(--light-gradient);
    }
    
    .success {
      color: green;
      font-weight: bold;
    }

    .error {
      color: red;
      font-weight: bold;
    }
    
    .kin-section {
      background-color: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 0.375rem;
      padding: 1rem;
      margin-bottom: 1rem;
    }
    
    .form-section-title {
      border-bottom: 2px solid var(--primary-purple);
      padding-bottom: 0.5rem;
      margin-bottom: 1rem;
      color: #495057;
    }
    
    .input-feedback {
      display: block;
      font-size: 0.875rem;
      margin-top: 0.25rem;
    }
    
    .strength-meter {
      height: 4px;
      background: #e9ecef;
      border-radius: 2px;
      margin-top: 0.25rem;
      overflow: hidden;
    }
    
    .strength-meter .bar {
      height: 100%;
      width: 0%;
      transition: width 0.3s ease;
    }
    
    .strength-meter .label {
      font-size: 0.75rem;
      margin-top: 0.25rem;
    }
    
    /* Mobile optimizations */
    @media (max-width: 768px) {
      .card-body {
        padding: 1rem;
      }
      
      .kin-section {
        padding: 0.75rem;
      }
      
      .form-section-title {
        font-size: 1.25rem;
      }
    }
    
    @media (max-width: 576px) {
      .p-4 {
        padding: 1rem !important;
      }
      
      .card-header h2 {
        font-size: 1.25rem;
      }
      
      .btn {
        width: 100%;
      }
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light-purple">

  <%- include('partials/oma-header', { omaUser: omaUser }) %>

  <div class="d-flex flex-column flex-md-row flex-grow-1">
    <%- include('partials/oma-sidebar', { active: 'apply', omaUser: omaUser, user: user }) %>

    <div class="flex-grow-1 p-3 p-md-4">
      <div class="card shadow-lg rounded-3 border-0">
        <div class="card-header bg-purple-gradient text-white text-center">
          <h2 class="mb-0">Online Member Application</h2>
        </div>
        <div class="card-body bg-white">
          
   <%- include('partials/flash') %>

          <form id="omaApplyForm" method="POST" action="/oma/apply" class="row g-3 needs-validation" novalidate>
            <h4 class="form-section-title">Personal Information</h4>
            
            <div class="col-12 col-md-4">
              <label class="form-label">First Name *</label>
              <input type="text" class="form-control" name="first_name" value="<%= formData.first_name || '' %>" required maxlength="50">
              <div class="invalid-feedback">Please provide a valid first name.</div>
            </div>
            
            <div class="col-12 col-md-4">
              <label class="form-label">Middle Name</label>
              <input type="text" class="form-control" name="middle_name" value="<%= formData.middle_name || '' %>" placeholder="Optional" maxlength="50">
            </div>
            
            <div class="col-12 col-md-4">
              <label class="form-label">Surname *</label>
              <input type="text" class="form-control" name="sur_name" value="<%= formData.sur_name || '' %>" required maxlength="50">
              <div class="invalid-feedback">Please provide a valid surname.</div>
            </div>
            
            <div class="col-12 col-md-6">
              <label class="form-label">Date of Birth *</label>
              <input type="date" class="form-control" name="date_of_birth" value="<%= formData.date_of_birth || '' %>" required>
              <div class="invalid-feedback">Please provide your date of birth.</div>
            </div>
            
            <div class="col-12 col-md-6">
              <label class="form-label">Gender *</label>
              <select class="form-select" name="gender" required>
                <option value="">Select Gender</option>
                <option value="Male" <%= formData.gender === 'Male' ? 'selected' : '' %>>Male</option>
                <option value="Female" <%= formData.gender === 'Female' ? 'selected' : '' %>>Female</option>
                <option value="Other" <%= formData.gender === 'Other' ? 'selected' : '' %>>Other</option>
              </select>
              <div class="invalid-feedback">Please select your gender.</div>
            </div>
            
            <div class="col-12 col-md-6">
              <label class="form-label">Phone *</label>
              <input type="text" class="form-control" name="phone" value="<%= formData.phone || '' %>" required placeholder="255712345678">
              <div class="invalid-feedback">Please provide a valid phone number.</div>
            </div>
            
            <div class="col-12 col-md-6">
              <label class="form-label">Email *</label>
              <input type="email" class="form-control" name="email" value="<%= formData.email || '' %>" required>
              <div class="invalid-feedback">Please provide a valid email address.</div>
            </div>
            
            <div class="col-12">
              <label class="form-label">Address *</label>
              <textarea class="form-control" name="address" rows="2" required placeholder="P.O.BOX 12345, CITY NAME or S.L.P 12345, CITY NAME"><%= formData.address || '' %></textarea>
              <div class="invalid-feedback">Please provide your address.</div>
            </div>
            
            <div class="col-12 col-md-6">
              <label class="form-label">Marital Status</label>
              <select class="form-select" name="marital_status">
                <option value="">-- Select --</option>
                <option value="single" <%= formData.marital_status === 'single' ? 'selected' : '' %>>Single</option>
                <option value="married" <%= formData.marital_status === 'married' ? 'selected' : '' %>>Married</option>
                <option value="divorced" <%= formData.marital_status === 'divorced' ? 'selected' : '' %>>Divorced</option>
              </select>
            </div>
            
            <div class="col-12 col-md-6">
              <label class="form-label">Number of Children</label>
              <input type="number" class="form-control" name="number_of_children" min="0" value="<%= formData.number_of_children || 0 %>">
            </div>
            
            <div class="col-12 col-md-6 form-check">
              <input type="checkbox" class="form-check-input" id="fatherAlive" name="father_alive" <%= formData.father_alive ? 'checked' : '' %>>
              <label class="form-check-label" for="fatherAlive">Father Alive</label>
            </div>
            
            <div class="col-12 col-md-6 form-check">
              <input type="checkbox" class="form-check-input" id="motherAlive" name="mother_alive" <%= formData.mother_alive ? 'checked' : '' %>>
              <label class="form-check-label" for="motherAlive">Mother Alive</label>
            </div>

            <!-- Next of Kin Section -->
            <h4 class="form-section-title">Next of Kin Information</h4>
            <small class="text-muted mb-3 d-block">Add up to 2 next of kin contacts</small>

            <!-- Next of Kin 1 -->
            <div class="kin-section">
              <h5 class="text-purple">Next of Kin 1 *</h5>
              <div class="row">
                <div class="col-12 col-md-4">
                  <label class="form-label">First Name</label>
                  <input type="text" class="form-control kin1-required" name="kin1_first_name" value="<%= formData.kin1_first_name || '' %>" required maxlength="50">
                  <div class="invalid-feedback">Please provide first name for next of kin 1.</div>
                </div>
                
                <div class="col-12 col-md-4">
                  <label class="form-label">Middle Name</label>
                  <input type="text" class="form-control" name="kin1_middle_name" value="<%= formData.kin1_middle_name || '' %>" placeholder="Optional" maxlength="50">
                </div>
                
                <div class="col-12 col-md-4">
                  <label class="form-label">Surname</label>
                  <input type="text" class="form-control kin1-required" name="kin1_sur_name" value="<%= formData.kin1_sur_name || '' %>" required maxlength="50">
                  <div class="invalid-feedback">Please provide surname for next of kin 1.</div>
                </div>
              </div>
              
              <div class="row mt-2">
                <div class="col-12 col-md-3">
                  <label class="form-label">Gender</label>
                  <select class="form-select kin1-required" name="kin1_gender" required>
                    <option value="">Select Gender</option>
                    <option value="Male" <%= formData.kin1_gender === 'Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%= formData.kin1_gender === 'Female' ? 'selected' : '' %>>Female</option>
                    <option value="Other" <%= formData.kin1_gender === 'Other' ? 'selected' : '' %>>Other</option>
                  </select>
                  <div class="invalid-feedback">Please select gender for next of kin 1.</div>
                </div>
                
                <div class="col-12 col-md-3">
                  <label class="form-label">Relationship</label>
                  <select class="form-select kin1-required" name="kin1_relationship" required>
                    <option value="">Select Relationship</option>
                    <option value="Father" <%= formData.kin1_relationship === 'Father' ? 'selected' : '' %>>Father</option>
                    <option value="Mother" <%= formData.kin1_relationship === 'Mother' ? 'selected' : '' %>>Mother</option>
                    <option value="Spouse" <%= formData.kin1_relationship === 'Spouse' ? 'selected' : '' %>>Spouse</option>
                    <option value="Son" <%= formData.kin1_relationship === 'Son' ? 'selected' : '' %>>Son</option>
                    <option value="Daughter" <%= formData.kin1_relationship === 'Daughter' ? 'selected' : '' %>>Daughter</option>
                    <option value="Brother" <%= formData.kin1_relationship === 'Brother' ? 'selected' : '' %>>Brother</option>
                    <option value="Sister" <%= formData.kin1_relationship === 'Sister' ? 'selected' : '' %>>Sister</option>
                    <option value="Other" <%= formData.kin1_relationship === 'Other' ? 'selected' : '' %>>Other</option>
                  </select>
                  <div class="invalid-feedback">Please select relationship for next of kin 1.</div>
                </div>
                
                <div class="col-12 col-md-3">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-control" name="kin1_email" value="<%= formData.kin1_email || '' %>">
                  <div class="invalid-feedback">Please provide a valid email address.</div>
                </div>
                
                <div class="col-12 col-md-3">
                  <label class="form-label">Phone *</label>
                  <input type="tel" class="form-control kin1-required" name="kin1_phone" value="<%= formData.kin1_phone || '' %>" required placeholder="255712345678">
                  <div class="invalid-feedback">Please provide phone number for next of kin 1.</div>
                </div>
              </div>
              
              <div class="mt-2">
                <label class="form-label">Address *</label>
                <textarea class="form-control kin1-required" name="kin1_address" required placeholder="P.O.BOX 12345, CITY NAME or S.L.P 12345, CITY NAME"><%= formData.kin1_address || '' %></textarea>
                <div class="invalid-feedback">Please provide address for next of kin 1.</div>
              </div>
            </div>

            <!-- Next of Kin 2 -->
            <div class="kin-section">
              <h5 class="text-purple">Next of Kin 2 (Optional)</h5>
              <div class="row">
                <div class="col-12 col-md-4">
                  <label class="form-label">First Name</label>
                  <input type="text" class="form-control kin2-conditional" name="kin2_first_name" value="<%= formData.kin2_first_name || '' %>" maxlength="50">
                </div>
                
                <div class="col-12 col-md-4">
                  <label class="form-label">Middle Name</label>
                  <input type="text" class="form-control" name="kin2_middle_name" value="<%= formData.kin2_middle_name || '' %>" placeholder="Optional" maxlength="50">
                </div>
                
                <div class="col-12 col-md-4">
                  <label class="form-label">Surname</label>
                  <input type="text" class="form-control kin2-conditional" name="kin2_sur_name" value="<%= formData.kin2_sur_name || '' %>" maxlength="50">
                </div>
              </div>
              
              <div class="row mt-2">
                <div class="col-12 col-md-3">
                  <label class="form-label">Gender</label>
                  <select class="form-select kin2-conditional" name="kin2_gender">
                    <option value="">Select Gender</option>
                    <option value="Male" <%= formData.kin2_gender === 'Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%= formData.kin2_gender === 'Female' ? 'selected' : '' %>>Female</option>
                    <option value="Other" <%= formData.kin2_gender === 'Other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                
                <div class="col-12 col-md-3">
                  <label class="form-label">Relationship</label>
                  <select class="form-select kin2-conditional" name="kin2_relationship">
                    <option value="">Select Relationship</option>
                    <option value="Father" <%= formData.kin2_relationship === 'Father' ? 'selected' : '' %>>Father</option>
                    <option value="Mother" <%= formData.kin2_relationship === 'Mother' ? 'selected' : '' %>>Mother</option>
                    <option value="Spouse" <%= formData.kin2_relationship === 'Spouse' ? 'selected' : '' %>>Spouse</option>
                    <option value="Son" <%= formData.kin2_relationship === 'Son' ? 'selected' : '' %>>Son</option>
                    <option value="Daughter" <%= formData.kin2_relationship === 'Daughter' ? 'selected' : '' %>>Daughter</option>
                    <option value="Brother" <%= formData.kin2_relationship === 'Brother' ? 'selected' : '' %>>Brother</option>
                    <option value="Sister" <%= formData.kin2_relationship === 'Sister' ? 'selected' : '' %>>Sister</option>
                    <option value="Other" <%= formData.kin2_relationship === 'Other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                
                <div class="col-12 col-md-3">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-control" name="kin2_email" value="<%= formData.kin2_email || '' %>">
                  <div class="invalid-feedback">Please provide a valid email address.</div>
                </div>
                
                <div class="col-12 col-md-3">
                  <label class="form-label">Phone</label>
                  <input type="tel" class="form-control kin2-conditional" name="kin2_phone" value="<%= formData.kin2_phone || '' %>" placeholder="255712345678">
                </div>
              </div>
              
              <div class="mt-2">
                <label class="form-label">Address</label>
                <textarea class="form-control kin2-conditional" name="kin2_address" placeholder="P.O.BOX 12345, CITY NAME or S.L.P 12345, CITY NAME"><%= formData.kin2_address || '' %></textarea>
              </div>
            </div>

            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-success px-4 px-md-5 py-2">
                <i class="fas fa-paper-plane me-2"></i>Submit Application
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/oma-footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/oma-validation.js"></script>
    <script src="/js/flash.js"></script>

 
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const style = document.createElement('style');
      style.textContent = `
        .text-purple {
          color: var(--primary-purple) !important;
        }
      `;
      document.head.appendChild(style);

      // Auto-dismiss alerts after 5 seconds
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        setTimeout(() => {
          const bsAlert = new bootstrap.Alert(alert);
          bsAlert.close();
        }, 5000);
      });
      
      // Clear form data from session after page load to prevent stale data
      fetch('/oma/clear-form-data', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      }).catch(err => console.log('Clear form data request failed:', err));

      // Conditional validation for Next of Kin 2
      function setupConditionalValidation() {
        const kin2FirstName = document.querySelector('input[name="kin2_first_name"]');
        const kin2Fields = document.querySelectorAll('.kin2-conditional');
        
        function toggleKin2Validation() {
          const hasFirstName = kin2FirstName.value.trim() !== '';
          
          kin2Fields.forEach(field => {
            if (hasFirstName) {
              field.setAttribute('required', 'required');
            } else {
              field.removeAttribute('required');
              field.classList.remove('is-invalid');
            }
          });
        }
        
        kin2Fields.forEach(field => {
          field.addEventListener('input', toggleKin2Validation);
          field.addEventListener('change', toggleKin2Validation);
        });
        
        // Initial check
        toggleKin2Validation();
      }
      
      setupConditionalValidation();

      // Bootstrap form validation
      const form = document.getElementById('omaApplyForm');
      if (form) {
        form.addEventListener('submit', function(event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      }
    });
  </script>
</body>
</html>


