<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Dashboard - FamilyFund</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Unified custom CSS -->
  <link href="/css/app.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">

     <!-- Header -->
        <%- include('partials/header') %>

  <!-- Sidebar -->
  <%- include('partials/sidebar', { user: user }) %>

 <main class="main-content">
    <div class="container-fluid pt-5 mt-3">
      
    <div class="row">

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <!-- Flash messages -->
        <% if (flash.error?.length) { %>
          <p class="error"><%= flash.error[0] %></p>
        <% } %>
        <% if (flash.success?.length) { %>
          <p class="success"><%= flash.success[0] %></p>
        <% } %>

        <h2 class="mb-4">Welcome, <%= member.first_name %> <%= member.sur_name %>!</h2>

        <!-- Summary Cards -->
        <div class="row g-3 mb-4">
          <div class="col-12 col-sm-6 col-md-4">
            <div class="card shadow-sm h-100">
              <div class="card-body d-flex align-items-center gap-3">
                <div class="card-icon bg-success">ðŸ’°</div>
                <div class="card-content">
                  <h5 class="card-title">Lifetime Contribution</h5>
                  <p class="card-text">TSh <%= memberTotal.toLocaleString() %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-sm-6 col-md-4">
            <div class="card shadow-sm h-100">
              <div class="card-body d-flex align-items-center gap-3" style="border-left: 6px solid <%= userColor %>;">
                <div class="card-icon" style="background:<%= userColor %>;">ðŸ“Š</div>
                <div class="card-content">
                  <h5 class="card-title">Your Share of All Contributions</h5>
                  <p class="card-text"><%= percentage %>%</p>
                  <small class="text-muted">Total all members: TSh <%= allTotal.toLocaleString() %></small>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-sm-12 col-md-4">
            <div class="card shadow-sm h-100">
              <div class="card-body d-flex flex-column gap-2">
                <h5 class="card-title">Update & Fund Requests</h5>
                <p><%= updateRequestsCount %> ðŸ“‹ request(s) <a href="/update-requests">View</a></p>
                <p><%= fundRequestsCount %> ðŸ’° request(s) <a href="/update-requests?tab=fund">Manage</a></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Notification Card -->
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Fund Requests</h5>
            <% if (user.role === 'chairman') { %>
              <p>Tracking only <strong>Expenses</strong> requests</p>
            <% } else if (user.role === 'chief_signatory') { %>
              <p>Tracking all requests <strong>except Expenses</strong></p>
            <% } %>
            <div class="row text-center mt-3">
              <div class="col-6 col-md-6 p-2 bg-light rounded mx-1">
                <h4 class="mb-0"><%= newCount %></h4>
                <small>New</small>
              </div>
              <div class="col-6 col-md-6 p-2 bg-light rounded mx-1">
                <h4 class="mb-0"><%= reviewedCount %></h4>
                <small>Reviewed</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Card -->
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Profile Details</h5>
            <p><strong>Full Name:</strong> <%= member.first_name %> <%= member.middle_name %> <%= member.sur_name %></p>
            <p><strong>Date of Birth:</strong> <%= member.date_of_birth ? new Date(member.date_of_birth).toDateString() : '' %></p>
            <p><strong>Address:</strong> <%= member.address %></p>
            <p><strong>Email:</strong> <%= member.email %></p>
            <p><strong>Phone:</strong> <%= member.phone %></p>
            <p><strong>Marital Status:</strong> <%= member.marital_status %></p>
            <p><strong>Number of Children:</strong> <%= member.number_of_children %></p>
            <p><strong>Father Alive:</strong> <%= member.father_alive ? 'Yes' : 'No' %></p>
            <p><strong>Mother Alive:</strong> <%= member.mother_alive ? 'Yes' : 'No' %></p>
            <p><strong>Role:</strong> <%= user.role.replace('_',' ') %></p>
          </div>
        </div>

        <!-- Contribution Filter & Table -->
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Filter Contributions</h5>
            <form class="row g-3 mb-3" id="contrib-filter-form" method="GET" action="/dashboard">
              <div class="col-12 col-sm-6 col-md-3">
                <label class="form-label">From</label>
                <input type="month" class="form-control" name="from" value="<%= from %>">
              </div>
              <div class="col-12 col-sm-6 col-md-3">
                <label class="form-label">To</label>
                <input type="month" class="form-control" name="to" value="<%= to %>">
              </div>
              <div class="col-12 col-md-6 d-flex gap-2 align-items-end">
                <button type="submit" class="btn btn-primary flex-fill">Filter</button>
                <a href="/user/contributions/pdf?<%= from ? 'from=' + from : '' %>&<%= to ? 'to=' + to : '' %>" target="_blank" class="btn btn-secondary flex-fill">Download PDF</a>
              </div>
            </form>

            <div class="table-responsive">
              <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                  <tr>
                    <th>Year</th><th>Jan</th><th>Feb</th><th>Mar</th><th>Apr</th><th>May</th><th>Jun</th>
                    <th>Jul</th><th>Aug</th><th>Sep</th><th>Oct</th><th>Nov</th><th>Dec</th><th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% contributions.forEach(c => { %>
                    <tr>
                      <td><%= c.year %></td>
                      <td><%= c.jan %></td><td><%= c.feb %></td><td><%= c.mar %></td><td><%= c.apr %></td>
                      <td><%= c.may %></td><td><%= c.jun %></td><td><%= c.jul %></td><td><%= c.aug %></td>
                      <td><%= c.sep %></td><td><%= c.oct %></td><td><%= c.nov %></td><td><%= c.dec %></td>
                      <td><strong><%= c.total_year %></strong></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Password Modal -->
        <%- include('partials/change_password_modal') %>

    </main>
    </div>
  </div>
</main>

  <!-- Footer -->
  <%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/script/dashboard.js"></script>
<script src="/script/sidebar.js"></script>
<script src="/script/update_profie.js"></script>

</body>
</html>
