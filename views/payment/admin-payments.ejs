
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Payments - Family Fund</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/flash.css">

 </head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar', { user: user }) %>

  <div class="main-content">
    <div class="container-fluid my-4">
      <div class="row">
        <div class="col-12">
          <h2><i class="fas fa-money-bill-wave me-2"></i>Payment Management</h2>

          <!-- Flash Messages -->
          <%- include('../partials/flash') %>

          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">All Payments</h5>
            </div>
            <div class="card-body">
              <% if (payments && payments.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Member</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Transaction ID</th>
                        <th>Date</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% payments.forEach(payment => { %>
                        <tr>
                          <td><%= payment.id %></td>
                          <td>
                            <%= payment.first_name %> <%= payment.sur_name %>
                            <% if (!payment.first_name) { %>
                              <span class="text-muted">(Member not found)</span>
                            <% } %>
                          </td>
                          <td>TSh <%= Number(payment.amount).toLocaleString() %></td>
                          <td>
                            <span class="badge 
                              <%= payment.payment_method === 'airtel_money' ? 'bg-danger' : 
                                  payment.payment_method === 'halopesa' ? 'bg-success' : 
                                  'bg-warning' %>">
                              <%= payment.payment_method === 'airtel_money' ? 'Airtel' : 
                                 payment.payment_method === 'halopesa' ? 'HaloPesa' : 
                                 payment.payment_method === 'tigo_pesa' ? 'Tigo' : 
                                 payment.payment_method %>
                            </span>
                          </td>
                          <td><%= payment.phone_number %></td>
                          <td>
                            <span class="badge 
                              <%= payment.status === 'completed' ? 'bg-success' : 
                                  payment.status === 'pending' ? 'bg-warning' : 
                                  'bg-danger' %>">
                              <%= payment.status %>
                            </span>
                          </td>
                          <td><code><%= payment.transaction_id %></code></td>
                          <td><%= new Date(payment.created_at).toLocaleString() %></td>
                          <td>
                            <button class="btn btn-sm btn-outline-info" 
                                    data-bs-toggle="tooltip" 
                                    title="View Details"
                                    onclick="viewPaymentDetails(<%= payment.id %>)">
                              <i class="fas fa-eye"></i>
                            </button>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p class="text-muted text-center">No payments found</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

    <script src="/js/flash.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function viewPaymentDetails(paymentId) {
      // Implement payment details view
      alert('Payment details for ID: ' + paymentId);
      // You can implement a modal or redirect to detailed view
    }

    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    });
  </script>
</body>
</html>


