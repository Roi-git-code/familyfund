

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "FamilyFund Management System" %></title>
  
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Unified CSS -->
  <link href="/css/app.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">
  
  <!-- Header -->
  <%- include('../partials/header') %>

  <div class="container-fluid flex-grow-1">
    <div class="row">
      <!-- Sidebar - Only show if user is logged in -->
      <% if (user) { %>
        <div class="col-md-3 col-lg-2 sidebar-container">
          <%- include('../partials/sidebar', { user: user }) %>
        </div>
      <% } %>

      <!-- Main content - Adjust width based on sidebar visibility -->
      <main class="<% if (user) { %>col-md-9 col-lg-10<% } else { %>col-12<% } %> main-content px-md-4 py-4">
        <!-- Flash messages -->
        <% if (flash.error && flash.error.length) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= flash.error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>
        
        <% if (flash.success && flash.success.length) { %>
          <div class="alert alert-success alert-dismissible fade show">
            <%= flash.success[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Page Content -->
        <%- body %>
      </main>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Password Modal -->
  <%- include('../partials/change_password_modal') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
