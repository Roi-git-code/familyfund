
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= categoryKey %> Fund History</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Unified custom CSS -->
  <link href="/css/app.css" rel="stylesheet">

</head>
<body class="bg-light">

    <%- include('partials/header') %>

  <%- include('partials/sidebar', { user: user }) %>
  <div class="main-container">
  
    <div class="container py-4">
      <h2 class="mb-3"><%= categoryKey.charAt(0).toUpperCase() + categoryKey.slice(1) %> Fund History</h2>
      <% if (from || to) { %>
        <p>Showing results for <%= from || 'start' %> → <%= to || 'present' %></p>
      <% } %>

      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover text-center align-middle">
          <thead class="table-primary">
            <tr>
              <th>TRN</th>
              <th>Member Name</th>
              <th>Amount (TSh)</th>
              <th>Created At</th>
              <th>Reviewed At</th>
              <th>Reason / Note</th>
            </tr>
          </thead>
          <tbody>
            <% if (transactions.length === 0) { %>
              <tr><td colspan="6">No transactions found</td></tr>
            <% } else { %>
              <% transactions.forEach(t => { %>
                <tr>
                  <td>
                    <% 
                      const index = t._categoryIndex || (transactions.indexOf(t) + 1); 
                      const requestId = t.id;
                    %>
                    TRN <%= index %>-<%= requestId %>
                  </td>
                  <td><%= (t.first_name || '') + ' ' + (t.sur_name || '') %></td>
                  <td><%= Number(t.amount).toLocaleString() %></td>
                  <td><%= new Date(t.created_at).toLocaleString() %></td>
                  <td><%= t.reviewed_at ? new Date(t.reviewed_at).toLocaleString() : '—' %></td>
                  <td><%= t.reason || '' %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

      <a href="/fund-management" class="btn btn-secondary mt-3">Back to Fund Management</a>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
