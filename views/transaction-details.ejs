

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Transaction Details - FamilyFund</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

 <!-- Unified custom CSS -->
  <link href="/css/app.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/flash.css">

  <style>
    .page-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
    }
    .table-actions {
      white-space: nowrap;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/sidebar', { user: user, activePage: 'contributions' }) %>

  <main class="main-content">
    <div class="container-fluid pt-5 mt-3">
      <div class="row">
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
          
          <!-- Flash messages -->
          <%- include('partials/flash') %>

          <!-- Page Header -->
          <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h2 class="fw-bold mb-2">Transaction Details</h2>
                <p class="mb-0 opacity-90">View individual contribution transactions with exact dates</p>
              </div>
              <div>
                <a href="/contributions" class="btn btn-light btn-sm me-2">
                  <i class="fas fa-table me-2"></i>Monthly View
                </a>
                <a href="/contributions/download/transactions/pdf?<%= [
                  selectedMember ? `member_id=${selectedMember}` : '',
                  selectedYear ? `year=${selectedYear}` : '',
                  from ? `from=${from}` : '',
                  to ? `to=${to}` : ''
                ].filter(Boolean).join('&') %>" class="btn btn-danger btn-sm">
                  <i class="fas fa-file-pdf me-2"></i>Export PDF
                </a>
              </div>
            </div>
          </div>

          <!-- Filter Form -->
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <form method="GET" action="/contributions/transactions" class="row g-3">
                <div class="col-md-3">
                  <label class="form-label">Member</label>
                  <select name="member_id" class="form-select">
                    <option value="">All Members</option>
                    <% members.forEach(m => { %>
                      <option value="<%= m.id %>" <%= selectedMember == m.id ? 'selected' : '' %>>
                        <%= m.first_name %> <%= m.sur_name %>
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-2">
                  <label class="form-label">Year</label>
                  <select name="year" class="form-select">
                    <option value="">All Years</option>
                    <% years.forEach(y => { %>
                      <option value="<%= y %>" <%= selectedYear == y ? 'selected' : '' %>><%= y %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-3">
                  <label class="form-label">From Date</label>
                  <input type="date" name="from" class="form-control" value="<%= from %>">
                </div>
                <div class="col-md-3">
                  <label class="form-label">To Date</label>
                  <input type="date" name="to" class="form-control" value="<%= to %>">
                </div>
                <div class="col-md-1 d-flex align-items-end">
                  <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- Transactions Table -->
          <div class="card shadow-sm">
            <div class="card-body">
              <% if (transactions.length === 0) { %>
                <div class="text-center py-5">
                  <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                  <h4>No Transactions Found</h4>
                  <p class="text-muted">No transactions match your current filters.</p>
                </div>
              <% } else { %>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Date</th>
                        <th>Member</th>
                        <th class="text-end">Amount (TSh)</th>
                        <th>Month</th>
                        <th>Year</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% transactions.forEach(transaction => { %>
                        <tr>
                          <td><%= new Date(transaction.transaction_date).toLocaleDateString() %></td>
                          <td>
                            <%= transaction.first_name %> <%= transaction.middle_name || '' %> <%= transaction.sur_name %>
                          </td>
                          <td class="text-end fw-bold text-success">
                            <%= Number(transaction.amount).toLocaleString() %>
                          </td>
                          <td>
                            <span class="badge bg-primary"><%= transaction.month.toUpperCase() %></span>
                          </td>
                          <td><%= transaction.year %></td>
                          <td class="table-actions">
                            <% if (user && user.role === 'chief_signatory') { %>
                              <button class="btn btn-sm btn-outline-warning">
                                <i class="fas fa-edit"></i>
                              </button>
                            <% } %>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                    <tfoot class="table-group-divider">
                      <tr class="table-active fw-bold">
                        <td colspan="2">Total</td>
                        <td class="text-end text-success">
                          TSh <%= transactions.reduce((sum, t) => sum + parseFloat(t.amount), 0).toLocaleString() %>
                        </td>
                        <td colspan="3"></td>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              <% } %>
            </div>
          </div>

        </main>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

<!-- Custom Scripts -->
  <script src="/script/dashboard.js"></script>
  <script src="/script/sidebar.js"></script>
  <script src="/script/update_profie.js"></script>
    <script src="/js/flash.js"></script>

  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


