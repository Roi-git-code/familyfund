

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Member Registration</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/css/flash.css">

    <style>
        .input-feedback {
            display: block;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        .strength-meter {
            height: 4px;
            background: #e9ecef;
            border-radius: 2px;
            margin: 0.25rem 0;
            overflow: hidden;
        }
        .strength-meter .bar {
            height: 100%;
            transition: all 0.3s ease;
        }
        .strength-meter .label {
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }
        .kin-section {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .form-section-title {
            border-bottom: 2px solid #007bff;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
            color: #495057;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <%- include('partials/sidebar', { user: user }) %>

    <div class="container my-4">
        <div class="card p-4">
     <%- include('partials/flash') %>

            <h2>Member Registration Form</h2>


            <!-- Member Registration Form -->
            <form id="memberRegistrationForm" action="/member" method="POST" class="mt-3">
                <h4 class="form-section-title">Personal Information</h4>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="firstName" class="form-label">First Name *</label>
                        <input type="text" id="firstName" name="first_name" value="<%= formData.first_name || '' %>" 
                               class="form-control" required maxlength="50">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="middleName" class="form-label">Middle Name</label>
                        <input type="text" id="middleName" name="middle_name" value="<%= formData.middle_name || '' %>" 
                               class="form-control" placeholder="Optional">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="surName" class="form-label">Sur Name *</label>
                        <input type="text" id="surName" name="sur_name" value="<%= formData.sur_name || '' %>" 
                               class="form-control" required maxlength="50">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="dob" class="form-label">Date of Birth *</label>
                        <input type="date" id="dob" name="date_of_birth" value="<%= formData.date_of_birth || '' %>" 
                               class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="gender" class="form-label">Gender *</label>
                        <select id="gender" name="gender" class="form-select" required>
                            <option value="">Select Gender</option>
                            <option value="Male" <%= formData.gender === 'Male' ? 'selected' : '' %>>Male</option>
                            <option value="Female" <%= formData.gender === 'Female' ? 'selected' : '' %>>Female</option>
                            <option value="Other" <%= formData.gender === 'Other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email *</label>
                        <input type="email" id="email" name="email" value="<%= formData.email || '' %>" 
                               class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="phone" class="form-label">Phone *</label>
                        <input type="tel" id="phone" name="phone" value="<%= formData.phone || '' %>" 
                               class="form-control" required placeholder="+255712345678">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">Address *</label>
                    <textarea id="address" name="address" class="form-control" required 
                              placeholder="P.O.BOX 12345, CITY NAME or S.L.P 12345, CITY NAME"><%= formData.address || '' %></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="maritalStatus" class="form-label">Marital Status *</label>
                        <select id="maritalStatus" name="marital_status" class="form-select" required>
                            <option value="single" <%= formData.marital_status === 'single' ? 'selected' : '' %>>Single</option>
                            <option value="married" <%= formData.marital_status === 'married' ? 'selected' : '' %>>Married</option>
                            <option value="divorced" <%= formData.marital_status === 'divorced' ? 'selected' : '' %>>Divorced</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="children" class="form-label">Number of Children</label>
                        <input type="number" id="children" name="number_of_children" value="<%= formData.number_of_children || 0 %>" 
                               class="form-control" min="0">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="fatherAlive" name="father_alive" 
                                   <%= formData.father_alive ? 'checked' : '' %>>
                            <label class="form-check-label" for="fatherAlive">Father Alive</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="motherAlive" name="mother_alive" 
                                   <%= formData.mother_alive ? 'checked' : '' %>>
                            <label class="form-check-label" for="motherAlive">Mother Alive</label>
                        </div>
                    </div>
                </div>

                <!-- Next of Kin Section -->
                <h4 class="form-section-title">Next of Kin Information</h4>
                <small class="text-muted mb-3 d-block">Add up to 2 next of kin contacts</small>

                <!-- Next of Kin 1 -->
                <div class="kin-section">
                    <h5>Next of Kin 1 *</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="kin1_first_name" class="form-label">First Name</label>
                            <input type="text" id="kin1_first_name" name="kin1_first_name" 
                                   value="<%= formData.kin1_first_name || '' %>" class="form-control" required maxlength="50">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="kin1_middle_name" class="form-label">Middle Name</label>
                            <input type="text" id="kin1_middle_name" name="kin1_middle_name" 
                                   value="<%= formData.kin1_middle_name || '' %>" class="form-control" placeholder="Optional">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="kin1_sur_name" class="form-label">Surname</label>
                            <input type="text" id="kin1_sur_name" name="kin1_sur_name" 
                                   value="<%= formData.kin1_sur_name || '' %>" class="form-control" required maxlength="50">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="kin1_gender" class="form-label">Gender</label>
                            <select id="kin1_gender" name="kin1_gender" class="form-select" required>
                                <option value="">Select Gender</option>
                                <option value="Male" <%= formData.kin1_gender === 'Male' ? 'selected' : '' %>>Male</option>
                                <option value="Female" <%= formData.kin1_gender === 'Female' ? 'selected' : '' %>>Female</option>
                                <option value="Other" <%= formData.kin1_gender === 'Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="kin1_relationship" class="form-label">Relationship</label>
                            <select id="kin1_relationship" name="kin1_relationship" class="form-select" required>
                                <option value="">Select Relationship</option>
                                <option value="Father" <%= formData.kin1_relationship === 'Father' ? 'selected' : '' %>>Father</option>
                                <option value="Mother" <%= formData.kin1_relationship === 'Mother' ? 'selected' : '' %>>Mother</option>
                                <option value="Spouse" <%= formData.kin1_relationship === 'Spouse' ? 'selected' : '' %>>Spouse</option>
                                <option value="Son" <%= formData.kin1_relationship === 'Son' ? 'selected' : '' %>>Son</option>
                                <option value="Daughter" <%= formData.kin1_relationship === 'Daughter' ? 'selected' : '' %>>Daughter</option>
                                <option value="Brother" <%= formData.kin1_relationship === 'Brother' ? 'selected' : '' %>>Brother</option>
                                <option value="Sister" <%= formData.kin1_relationship === 'Sister' ? 'selected' : '' %>>Sister</option>
                                <option value="Other" <%= formData.kin1_relationship === 'Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="kin1_email" class="form-label">Email</label>
                            <input type="email" id="kin1_email" name="kin1_email" 
                                   value="<%= formData.kin1_email || '' %>" class="form-control">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="kin1_phone" class="form-label">Phone</label>
                            <input type="tel" id="kin1_phone" name="kin1_phone" 
                                   value="<%= formData.kin1_phone || '' %>" class="form-control" required placeholder="+255712345678">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="kin1_address" class="form-label">Address</label>
                        <textarea id="kin1_address" name="kin1_address" class="form-control" required 
                                  placeholder="P.O.BOX 12345, CITY NAME or S.L.P 12345, CITY NAME"><%= formData.kin1_address || '' %></textarea>
                    </div>
                </div>

                <!-- Next of Kin 2 -->
                <div class="kin-section">
                    <h5>Next of Kin 2 (Optional)</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="kin2_first_name" class="form-label">First Name</label>
                            <input type="text" id="kin2_first_name" name="kin2_first_name" 
                                   value="<%= formData.kin2_first_name || '' %>" class="form-control" maxlength="50">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="kin2_middle_name" class="form-label">Middle Name</label>
                            <input type="text" id="kin2_middle_name" name="kin2_middle_name" 
                                   value="<%= formData.kin2_middle_name || '' %>" class="form-control" placeholder="Optional">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="kin2_sur_name" class="form-label">Surname</label>
                            <input type="text" id="kin2_sur_name" name="kin2_sur_name" 
                                   value="<%= formData.kin2_sur_name || '' %>" class="form-control" maxlength="50">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="kin2_gender" class="form-label">Gender</label>
                            <select id="kin2_gender" name="kin2_gender" class="form-select">
                                <option value="">Select Gender</option>
                                <option value="Male" <%= formData.kin2_gender === 'Male' ? 'selected' : '' %>>Male</option>
                                <option value="Female" <%= formData.kin2_gender === 'Female' ? 'selected' : '' %>>Female</option>
                                <option value="Other" <%= formData.kin2_gender === 'Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="kin2_relationship" class="form-label">Relationship</label>
                            <select id="kin2_relationship" name="kin2_relationship" class="form-select">
                                <option value="">Select Relationship</option>
                                <option value="Father" <%= formData.kin2_relationship === 'Father' ? 'selected' : '' %>>Father</option>
                                <option value="Mother" <%= formData.kin2_relationship === 'Mother' ? 'selected' : '' %>>Mother</option>
                                <option value="Spouse" <%= formData.kin2_relationship === 'Spouse' ? 'selected' : '' %>>Spouse</option>
                                <option value="Son" <%= formData.kin2_relationship === 'Son' ? 'selected' : '' %>>Son</option>
                                <option value="Daughter" <%= formData.kin2_relationship === 'Daughter' ? 'selected' : '' %>>Daughter</option>
                                <option value="Brother" <%= formData.kin2_relationship === 'Brother' ? 'selected' : '' %>>Brother</option>
                                <option value="Sister" <%= formData.kin2_relationship === 'Sister' ? 'selected' : '' %>>Sister</option>
                                <option value="Other" <%= formData.kin2_relationship === 'Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="kin2_email" class="form-label">Email</label>
                            <input type="email" id="kin2_email" name="kin2_email" 
                                   value="<%= formData.kin2_email || '' %>" class="form-control">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="kin2_phone" class="form-label">Phone</label>
                            <input type="tel" id="kin2_phone" name="kin2_phone" 
                                   value="<%= formData.kin2_phone || '' %>" class="form-control" placeholder="+255712345678">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="kin2_address" class="form-label">Address</label>
                        <textarea id="kin2_address" name="kin2_address" class="form-control" 
                                  placeholder="P.O.BOX 12345, CITY NAME or S.L.P 12345, CITY NAME"><%= formData.kin2_address || '' %></textarea>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Register Member</button>
            </form>
        </div>

        <%- include('partials/change_password_modal') %>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script/dashboard.js"></script>
    <script src="/script/sidebar.js"></script>
    <script src="/script/update_profie.js"></script>
    <script src="/script/validation.js"></script>
    <script src="/script/layoutScript.js"></script>
    <script src="/js/flash.js"></script>


    <script>
        // Additional validation for next of kin fields
        document.addEventListener('DOMContentLoaded', function() {
            // Custom middle name validation function
            function validateMiddleName(input) {
                const value = input.value.trim();
                
                // If empty, it's valid (optional field)
                if (!value) {
                    return setFeedback(input, "✓ Optional field", true);
                }
                
                // Check if it contains only letters and spaces
                const nameRegex = /^[A-Za-z\s]{1,50}$/;
                if (!nameRegex.test(value)) {
                    return setFeedback(input, "Only letters and spaces allowed (max 50 characters).", false);
                }
                
                return setFeedback(input, "✓ Valid middle name", true);
            }

            // Add validation for next of kin fields
            const kin1FirstName = document.getElementById('kin1_first_name');
            const kin1MiddleName = document.getElementById('kin1_middle_name');
            const kin1SurName = document.getElementById('kin1_sur_name');
            const kin1Phone = document.getElementById('kin1_phone');
            const kin1Address = document.getElementById('kin1_address');

            const kin2FirstName = document.getElementById('kin2_first_name');
            const kin2MiddleName = document.getElementById('kin2_middle_name');
            const kin2SurName = document.getElementById('kin2_sur_name');
            const kin2Phone = document.getElementById('kin2_phone');
            const kin2Address = document.getElementById('kin2_address');

            // Only validate kin2 fields if they have values
            if (kin1FirstName) {
                kin1FirstName.addEventListener('input', () => validateName(kin1FirstName));
                kin1MiddleName.addEventListener('input', () => validateMiddleName(kin1MiddleName));
                kin1SurName.addEventListener('input', () => validateName(kin1SurName));
                kin1Phone.addEventListener('input', () => validatePhone(kin1Phone));
                kin1Address.addEventListener('input', () => validateAddress(kin1Address));
            }

            if (kin2FirstName) {
                kin2FirstName.addEventListener('input', () => {
                    if (kin2FirstName.value) validateName(kin2FirstName);
                });
                kin2MiddleName.addEventListener('input', () => {
                    if (kin2MiddleName.value) validateMiddleName(kin2MiddleName);
                });
                kin2SurName.addEventListener('input', () => {
                    if (kin2SurName.value) validateName(kin2SurName);
                });
                kin2Phone.addEventListener('input', () => {
                    if (kin2Phone.value) validatePhone(kin2Phone);
                });
                kin2Address.addEventListener('input', () => {
                    if (kin2Address.value) validateAddress(kin2Address);
                });
            }

            // Form submission validation for next of kin
            const form = document.getElementById('memberRegistrationForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    let valid = true;

                    // Validate required next of kin 1 fields
                    if (kin1FirstName && !validateName(kin1FirstName)) valid = false;
                    if (kin1SurName && !validateName(kin1SurName)) valid = false;
                    if (kin1Phone && !validatePhone(kin1Phone)) valid = false;
                    if (kin1Address && !validateAddress(kin1Address)) valid = false;

                    // Validate next of kin 2 fields only if any field is filled
                    const kin2HasData = kin2FirstName?.value || kin2SurName?.value || kin2Phone?.value || kin2Address?.value;
                    if (kin2HasData) {
                        if (kin2FirstName && kin2FirstName.value && !validateName(kin2FirstName)) valid = false;
                        if (kin2SurName && kin2SurName.value && !validateName(kin2SurName)) valid = false;
                        if (kin2Phone && kin2Phone.value && !validatePhone(kin2Phone)) valid = false;
                        if (kin2Address && kin2Address.value && !validateAddress(kin2Address)) valid = false;
                    }

                    if (!valid) {
                        e.preventDefault();
                        // Scroll to first error
                        const firstError = form.querySelector('.input-feedback[style="color: red;"]');
                        if (firstError) {
                            firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>


